<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                        <Menu mnemonicParsing="false" text="Update Store">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Add Book" />
                              <MenuItem mnemonicParsing="false" onAction="#miAddCd" text="Add CD" />
                              <MenuItem mnemonicParsing="false" onAction="#miAddDvd" text="Add DVD" />
                          </items>
                        </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#btnViewStorePressed" text="View Store" />
                        <MenuItem mnemonicParsing="false" onAction="#btnViewCartPressed" text="View Cart" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="ADD BOOK" textFill="AQUA">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lbAddStatus" />
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="75.0" text="Title:">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfTitle" prefWidth="200.0" promptText="e.g. Calculus III" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="75.0" text="Category:">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfCategory" prefWidth="200.0" promptText="e.g. Textbook" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="75.0" text="Cost:">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfCost" prefWidth="200.0" promptText="e.g. 1.69" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="80.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="75.0" text="Authors:">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfAuthors" prefWidth="200.0" promptText="e.g. Nguyen Thieu Huy, Bui Xuan Dieu, Dao Tuan Anh" />
               </children>
            </HBox>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnAddPressed" text="Add" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
